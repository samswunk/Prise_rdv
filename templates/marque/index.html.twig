{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Liste des Marques</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomMarque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.nomMarque }}</td>
                <td>
                    <a href="{{ path('marque_show', {'id': marque.id}) }}" class="btn btn-secondary col-4"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('marque_edit', {'id': marque.id}) }}" class="btn btn-sucess"><i class="fa fa-edit" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('marque_new') }}" class="btn btn-success">Nouveau</a>
{% endblock %}
