{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="container">
        <h1>Clients</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ client.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ client.prenom }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ client.telephone }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ client.adresse }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ client.ville }}</td>
                </tr>
                <tr>
                    <th>CodePostal</th>
                    <td>{{ client.codePostal }}</td>
                </tr>
            </tbody>
        </table>
        <div class="col-12 row border border-dark text-center">
            <a href="{{ path('clients_index') }}"                   class="btn btn-secondary col-xs-3">Retour</a>
            <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-success col-xs-3">Modifier</a>
            {{ include('clients/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
