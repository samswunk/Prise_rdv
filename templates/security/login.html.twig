{% extends 'base.html.twig' %}

{% block title %}J'ai déjà un compte{% endblock %}

{% block size %}3{% endblock size %}

{% block body %}
        <div class="col-md-12 text-center shadow-lg rounded">
            <form method="post" action="{{path('app_login')}}">
                {% if error %}
                    <div class=""><h4><strong class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</strong></h4></div>
                {% endif %}

                {# {% if app.user %}
                    <div class="mb-3">
                        Vous êtes authentifiés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %} #}

                {# <h1 class="h3 mb-3 font-weight-normal text-center text-white">Vous avez déjà un compte ?</h1> #}
                {# <label for="inputEmail">Email</label> #}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" placeholder="Adresse email" required autofocus>
                {# <label for="inputPassword" class="mt-3">Mot de passe</label> #}
                <input type="password" name="password" id="inputPassword" class="form-control mt-2" placeholder="Mot de passe" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="go_to" value="{{ path('booking_index') }}"/>
                <input type="hidden" name="back_to" value="{{ path('app_forgot') }}"/>

                {#
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class=" center text-center footer mt-3">
                    <button class="text-center btn btn-lg btn-primary col-12" type="submit">
                        Valider
                    </button>
                    <div class="text-center">
                        <a  class="btn btn-sm btn-link txt-center" href="{{ path('app_forgot') }}" >
                            <span class="strong text-center">Mot de passe oublié ?</span></a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-12 center text-center rounded shadow-lg justify-content-between mt-3" style="background-color:#d4ebf2;">
            <h5 class="font-weight-normal">Je crée mon compte</h5>
            <div class="mt-3 center text-center justify-content-between">
                <a  class="text-center btn btn-lg btn-white text-primary" title="S'inscrire" aria-label="S'inscrire" 
                    href="{{ path('app_register') }}"><strong>S'inscrire</strong></a>
            </div>
        </div>
{% endblock %}
