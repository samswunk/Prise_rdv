{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class="text-center mb-2"><span>JE CONSULTE LES RENDEZ-VOUS DISPONIBLES</span></h1>
    <div class="row">
        <div class="col-md-8 ml-5" style="background-color: lightcoral;">
            <form method="post">
                {% if error %}
                    <div class=""><h4><strong class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</strong></h4></div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes authentifiés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center text-white">Vous avez déjà un compte ?</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class=" center text-center footer mt-3">
                    <button class="text-center btn btn-lg btn-primary" type="submit">
                        Valider
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-2 ml-3 center text-center justify-content-between" style="background-color:#d4ebf2;">
            <p class="mb-3 font-weight-normal">Je crée mon compte</p>
            <div class="mt-3 center text-center justify-content-between">
                <a  class="text-center btn btn-lg btn-primary" title="S'inscrire" aria-label="S'inscrire" 
                    href="{{ path('app_register') }}">S'inscrire</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
