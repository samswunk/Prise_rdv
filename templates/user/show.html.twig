{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="card">
    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Utilisateur</strong>
    </h5>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.Telephone }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.Prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.Adresse }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ user.CodePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.Ville }}</td>
            </tr>
        </tbody>
    </table>
    <div class="card-footer row">
        <a class="btn btn-secondary"    href="{{ path('user_index') }}">Retour</a>
        <a class="btn btn-success"      href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>    
{% endblock %}
