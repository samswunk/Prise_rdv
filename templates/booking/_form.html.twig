<div class="container border border-dark col-10">
    {{ form_start(form) }}
    <h1><small>Je m'inscris au rdv du {{ form.start.vars.value }} au {{ form.end.vars.value }} </small></h1>        
        <div class="container col-10">
            {% set NewPrenom = '' %}
            {% set NewAdresse = app.user.adresse ~ " " ~ app.user.codepostal ~ " " ~ app.user.codepostal  %}

            {% if app.user.prenom|length %}
                {% set NewPrenom = " " ~ app.user.prenom %}
            {% endif %}
            {% set NewTitre = "RDV " ~ app.user.nom ~ NewPrenom ~ " (tel : " ~ app.user.telephone ~ ")" %}
            {{ form_row(form.title, {'label':' ', 'value': NewTitre, 'attr': {  class: 'col-12',
                                                                    disabled: false} }) }}
            {# {{ form_widget(form.start, {'attr': {'class': 'col-3'}}) }}
            {{ form_widget(form.end, {'attr': {'class': 'col-3'}}) }}#}
            {{ form_row(form.description, { 'value': NewAdresse, 'attr': {  class: 'col-12 required',
                                                                            required: true} }) }}
            <div class="form-control" style="display:block;">
                {{ form_widget(form.start) }}
                {{ form_widget(form.end) }}
            </div> 
        <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form, {'render_rest': false}) }}
        </div>
</div>
