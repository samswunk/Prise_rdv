{% extends 'base.html.twig' %}

{% block body %}
    <title>Booking</title>
    <h1>Booking</h1>
    {{ dump(booking) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ booking.start ? booking.start|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ booking.end ? booking.end|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ booking.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">Retour</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
